<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "styled-form"}) do |f| %>
  <label> Email
    <%= f.email_field :email, :autofocus => true %>
  </label>

  <label> Password    
    <%= f.password_field :password %>
  </label>

  <% if devise_mapping.rememberable? -%>
    <label> Remember Me 
      <%= f.check_box :remember_me %> 
    </label>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>
<% end %>
